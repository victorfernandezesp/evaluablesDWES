{% extends "layout.twig" %}

{% block nav %}
	<nav>
		<ul class="navigation">
			<li>
				<a href="/">Home</a>
			</li>
			<li>
				<a href="/about">About
				</a>
			</li>
			{% if profile == "Invitado" %}
				<li>
					<a href="/login">Login</a>
				</li>
			{% else %}
				<li>
					<a href="/contactos">Contact</a>
				</li>
				<li>
					<a href="/admin">Admin</a>
				</li>
				<li>
					<a href="/logout">Logout</a>
				</li>
			{% endif %}
